<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="583dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/lista" />

        <TextView
            android:id="@+id/tit_usuarios"
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="17dp"
            android:text="Lista de Usuarios"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp" />
    </RelativeLayout>
    <!-- En caso de lista vacÃ­a -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="1dp"
            android:background="@color/colorPrimary" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_Usuarios"
        android:layout_width="match_parent"
        android:layout_height="690dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp">

    </android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:layout_width="550dp"
        android:layout_height="59dp">
        <TextView
            android:id="@+id/tit_usuarios2"
            android:layout_width="450dp"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:text="Presione para Agregar Nuevo Usuario"
            android:textSize="20sp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/agregar_usu"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="450dp"
            android:layout_marginRight="17dp"
            android:src="@drawable/ic_add"
            app:backgroundTint="@color/colorAccent"
            app:borderWidth="1dp"
            app:layout_anchorGravity="bottom|right" />

    </RelativeLayout>







</LinearLayout>