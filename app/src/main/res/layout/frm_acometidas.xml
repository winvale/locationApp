            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="25dp"
            android:entries="@array/ca"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_marginTop="-10dp"
            android:padding="18dp"
            android:visibility="visible"
            android:descendantFocusability="afterDescendants"></Spinner>

        <Spinner
            android:id="@+id/as"
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginTop="-10dp"
            android:descendantFocusability="afterDescendants"
            android:entries="@array/as"
            android:gravity="center_horizontal"
            android:padding="18dp"
            android:textAlignment="center"
            android:visibility="visible"></Spinner>



    </LinearLayout>


    <LinearLayout
        android:layout_width="570dp"
        android:layout_height="77dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="1dp">

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:text="Código Poste"
                android:textColor="@color/drakgray"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/codigoposte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="PM0007001"
                android:textColor="@color/drakgray"
                android:textSize="20sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="62dp"
            android:layout_height="59dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/casa"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Registro de Acometida"
            android:textColor="@color/drakgray"
            android:textSize="30sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/operario"
        android:layout_width="249dp"
        android:layout_height="26dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="81dp"
        android:layout_marginStart="44dp"
        android:gravity="center"
        android:text="Operario"
        android:textColor="@color/drakgray"
        android:textSize="18sp"
        android:visibility="invisible"
        android:layout_alignParentLeft="true"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/cod_acometida"
        android:layout_width="249dp"
        android:layout_height="26dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="81dp"
        android:layout_marginStart="44dp"
        android:gravity="center"
        android:text="Operario"
        android:textColor="@color/drakgray"
        android:textSize="18sp"
        android:visibility="invisible"
        android:layout_alignParentLeft="true"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/btnGuardaracometida"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent"
        android:elevation="2dp"
        android:text="GUARDAR"
        android:textSize="25sp"
        android:textColor="@color/white"

        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="810dp"
        android:layout_alignParentLeft="true">

    </Button>

    <LinearLayout
        android:layout_width="570sp"
        android:layout_height="41dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp">

        <TextView
            android:id="@+id/tcontador"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="25dp"
            android:background="@color/colorPrimary"
            android:shadowColor="@color/colorPrimaryDark"
            android:text="# Contador"
            android:textAlignment="center"
            android:textSize="25sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/tmarca"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:shadowColor="@color/colorPrimaryDark"
            android:text="Marca"
            android:textAlignment="center"
            android:textSize="25sp"
            tools:ignore="RtlCompat" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="570sp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="144dp">

        <EditText
            android:id="@+id/contador"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="25dp"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="25sp" />
        <EditText
            android:id="@+id/marcacon"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="25sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="570sp"
        android:layout_height="21dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp">

        <TextView
