            android:layout_marginTop="-18dp"
            android:descendantFocusability="afterDescendants"
            android:entries="@array/mbt"
            android:gravity="center_horizontal"
            android:padding="18dp"
            android:textAlignment="center"></Spinner>


    </LinearLayout>
