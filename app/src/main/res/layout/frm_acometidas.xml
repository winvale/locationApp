            android:textAlignment="center"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/tcaliacom"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Calibre Acometida [AWG] "
            android:textAlignment="center"
            android:textSize="21sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="570sp"
        android:layout_height="57dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="245dp">

        <Spinner
            android:id="@+id/tblromed"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="-7dp"
            android:descendantFocusability="afterDescendants"
            android:entries="@array/tab_medidores"
            android:gravity="center_horizontal"
            android:padding="18dp"
            android:textAlignment="center" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fasesTablero">

            <CheckBox
                android:id="@+id/ch_fasert"
                android:layout_width="50dp"
                android:layout_height="52dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:text="R"
                android:onClick="chbox"
                android:checked="false"/>

            <CheckBox
                android:id="@+id/ch_fasett"
                android:layout_width="50dp"
                android:layout_height="52dp"
                android:layout_marginRight="20dp"
                android:text="T"
                android:onClick="chbox"
                android:checked="false" />

            <CheckBox
                android:id="@+id/ch_fasest"
                android:layout_width="50dp"
                android:layout_height="52dp"
                android:layout_marginRight="30dp"
                android:text="S"
                android:onClick="chbox"
                android:checked="false" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="570sp"
        android:layout_height="41dp"
